generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Players {
  id            String @id @default(uuid())
  username      String @unique
  passwordHash  String
  userAuthToken String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role   Roles @relation(fields: [roleId], references: [id])
  roleId Int

  table   Tables? @relation(fields: [tableId], references: [key])
  tableId String?
}

model Roles {
  id   Int    @id @default(autoincrement())
  name String @unique
  player Players[]
}

model Games {
  id   Int    @id @default(autoincrement())
  name String @unique
  description String
  image String
  tables Tables[]
}

model Tables {
  key   String @id @default(uuid())
  title String
  limit Int
  players Players[]
  cards Cards[]
  games  Games @relation(fields: [gameId], references: [id])
  gameId Int
}

model Cards {
  id String @id @default(uuid())
  name String
  type String
  table   Tables @relation(fields: [tableId], references: [key])
  tableId String
  active Boolean
}

